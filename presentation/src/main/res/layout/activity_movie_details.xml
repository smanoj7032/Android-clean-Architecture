<?xml version="1.0" encoding="utf-8"?>

<androidx.slidingpanelayout.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/movie_details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/flash_dialog"
                    android:textStyle="italic|bold" />

                <Button
                    android:id="@+id/btn_flash_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_flash_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_flash_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_flash_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/connectify_dialog"
                    android:textStyle="italic|bold" />

                <RadioGroup
                    android:id="@+id/rg_connectify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_connectify_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:text="@string/light_theme"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/rb_connectify_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:text="@string/dark_theme"
                        android:textSize="14dp" />
                </RadioGroup>

                <Button
                    android:id="@+id/btn_connectify_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_connectify_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_connectify_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_connectify_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/toaster_dialog"
                    android:textStyle="italic|bold" />

                <RadioGroup
                    android:id="@+id/rg_toaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_toaster_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:text="@string/light_theme"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/rb_toaster_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:text="@string/dark_theme"
                        android:textSize="14dp" />
                </RadioGroup>

                <Button
                    android:id="@+id/btn_toaster_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_toaster_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/btn_toaster_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_toaster_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_toaster_dialog_warning"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_toaster_warning"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_toaster_dialog_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_toaster_info"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/emotion_dialog"
                    android:textStyle="italic|bold" />

                <Button
                    android:id="@+id/btn_emotion_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_emotion_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_emotion_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_emotion_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/drake_dialog"
                    android:textStyle="italic|bold" />


                <Button
                    android:id="@+id/btn_drake_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_drake_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_drake_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_drake_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/emoji_dialog"
                    android:textStyle="italic|bold" />

                <RadioGroup
                    android:id="@+id/rg_emoji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_emoji_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:text="@string/light_theme"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/rb_emoji_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:text="@string/dark_theme"
                        android:textSize="14dp" />
                </RadioGroup>


                <Button
                    android:id="@+id/btn_emoji_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_emoji_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_emoji_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_emoji_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/rainbow_dialog"
                    android:textStyle="italic|bold" />

                <Button
                    android:id="@+id/btn_rainbow_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_rainbow_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/btn_rainbow_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_rainbow_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_rainbow_dialog_warning"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_rainbow_warning"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_rainbow_dialog_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_rainbow_info"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/flat_dialog"
                    android:textStyle="italic|bold" />

                <RadioGroup
                    android:id="@+id/rg_flat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_flat_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:text="@string/light_theme"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/rb_flat_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:text="@string/dark_theme"
                        android:textSize="14dp" />
                </RadioGroup>

                <Button
                    android:id="@+id/btn_flat_dialog_success"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_flat_success"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_flat_dialog_error"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_flat_error"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_flat_dialog_warning"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_flat_warning"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_flat_dialog_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_selector"
                    android:onClick="onClick"
                    android:text="@string/show_flat_info"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.slidingpanelayout.widget.SlidingPaneLayout>
