<resources>

    <style name="LightTheme" parent="Theme.Material3.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#989494</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="colorSecondary">#3D3D3D</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.Float</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigation</item>
        <item name="navigationRailStyle">@style/Widget.Design.NavigationRail</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">#DFAB04</item>
    </style>
    <style name="DarkTheme" parent="Theme.Material3.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="colorSecondary">@color/gray</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.Float</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigation</item>
        <item name="navigationRailStyle">@style/Widget.Design.NavigationRail</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>
    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="AlertDialogStyle" parent="ThemeOverlay.Material3.Dialog.Alert">
        <!-- Customize the button text color for AlertDialog -->
        <item name="titleTextColor">@style/TitleColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FF0000</item> <!-- Set the text color for the positive button -->
    </style>
    <style name="TitleColor" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FF0000</item> <!-- Set the text color for the positive button -->
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FF0000</item> <!-- Set the text color for the negative button -->
    </style>

    <style name="Widget.Design.Float" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.Design.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?android:colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
    </style>

    <style name="Widget.Design.NavigationRail" parent="Widget.Material3.NavigationRailView">
        <item name="android:background">?android:colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
    </style>

    <style name="ButtonSolid" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ButtonStroke" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
