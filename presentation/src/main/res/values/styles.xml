<resources>

    <style name="LightTheme" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">#000000</item>
        <item name="colorSecondary">#3D3D3D</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.Float</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigation</item>
        <item name="navigationRailStyle">@style/Widget.Design.NavigationRail</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">#DFAB04</item>
    </style>

    <style name="DarkTheme" parent="Theme.Material3.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#8660B6</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="AlertDialogStyle" parent="ThemeOverlay.Material3.Dialog.Alert">
        <!-- Customize the button text color for AlertDialog -->
        <item name="titleTextColor">@style/TitleColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FF0000
        </item> <!-- Set the text color for the positive button -->
    </style>

    <style name="TitleColor" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FF0000
        </item> <!-- Set the text color for the positive button -->
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FF0000
        </item> <!-- Set the text color for the negative button -->
    </style>

    <style name="Widget.Design.Float" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.Design.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?android:colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
    </style>

    <style name="Widget.Design.NavigationRail" parent="Widget.Material3.NavigationRailView">
        <item name="android:background">?android:colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
    </style>

    <style name="ButtonSolid" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ButtonStroke" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="dialog_grow_in">
        <item name="android:windowEnterAnimation">@anim/grow_in</item>
        <item name="android:windowExitAnimation">@anim/grow_out</item>
    </style>
    <declare-styleable name="advDrawerLayout">
        <attr name="adl_customBehavior" format="boolean" />
        <attr name="adl_viewScale" format="float" />
        <attr name="adl_viewScrimColor" format="color" />
        <attr name="adl_viewElevation" format="dimension" />
        <attr name="adl_drawerElevation" format="dimension" />
        <attr name="adl_cardBackgroundColor" format="reference|color" />
    </declare-styleable>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profile_text" parent="text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="profile_text_count" parent="text">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--CUSTOM DIALOGS-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animate_slide_down_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_up_exit</item>
    </style>

    <style name="DialogAnimationFade">
        <item name="android:windowEnterAnimation">@anim/animate_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_fade_exit</item>
    </style>

    <style name="DialogAnimationZoom">
        <item name="android:windowEnterAnimation">@anim/animate_zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_zoom_exit</item>
    </style>

    <style name="DialogAnimationCard">
        <item name="android:windowEnterAnimation">@anim/animate_card_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_card_exit</item>
    </style>

    <style name="DialogAnimationShrink">
        <item name="android:windowEnterAnimation">@anim/animate_shrink_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_shrink_exit</item>
    </style>

    <style name="DialogAnimationSwipeLeft">
        <item name="android:windowEnterAnimation">@anim/animate_swipe_left_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_swipe_left_exit</item>
    </style>

    <style name="DialogAnimationSwipeRight">
        <item name="android:windowEnterAnimation">@anim/animate_swipe_right_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_swipe_right_exit</item>
    </style>

    <style name="DialogAnimationInOut">
        <item name="android:windowEnterAnimation">@anim/animate_in_out_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_in_out_exit</item>
    </style>

    <style name="DialogAnimationSpin">
        <item name="android:windowEnterAnimation">@anim/animate_spin_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_spin_exit</item>
    </style>

    <style name="DialogAnimationSplit">
        <item name="android:windowEnterAnimation">@anim/animate_split_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_split_exit</item>
    </style>

    <style name="DialogAnimationDiagonal">
        <item name="android:windowEnterAnimation">@anim/animate_diagonal_right_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_diagonal_right_exit</item>
    </style>

    <style name="DialogAnimationWindMill">
        <item name="android:windowEnterAnimation">@anim/animate_windmill_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_windmill_exit</item>
    </style>

    <style name="DialogAnimationSlideUp">
        <item name="android:windowEnterAnimation">@anim/animate_slide_up_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_up_exit</item>
    </style>

    <style name="DialogAnimationSlideDown">
        <item name="android:windowEnterAnimation">@anim/animate_slide_down_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_down_exit</item>
    </style>

    <style name="DialogAnimationSlideRight">
        <item name="android:windowEnterAnimation">@anim/animate_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_out_right</item>
    </style>

    <style name="DialogAnimationSlideLeft">
        <item name="android:windowEnterAnimation">@anim/animate_slide_left_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_left_exit</item>
    </style>

</resources>
